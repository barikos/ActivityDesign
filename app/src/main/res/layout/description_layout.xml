<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/description_border">


    <ImageView
        android:id="@+id/img_play_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/descr_ic_shop_black_18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"/>

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/desc_ic_share_black_18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/txt_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playMarket"
        android:textSize="15sp"
        android:layout_below="@id/img_play_market"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/txt_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_below="@id/img_share"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>


    <View
        android:id="@+id/desc_line_first"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/descDivider"
        android:layout_marginTop="15dp"
        android:layout_below="@id/txt_market"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/txt_desc_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_app_name"
        android:textColor="@color/descText"
        android:textSize="20sp"
        android:layout_below="@id/desc_line_first"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/desc_margin_lr"/>

    <ImageView
        android:id="@+id/img_desc_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/desr_ic_cloud_upload_black_24dp"
        android:layout_below="@id/txt_desc_app_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/desc_margin_lr"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_achiv"
        android:layout_toRightOf="@id/img_desc_progress"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/img_desc_progress"/>

    <TextView
        android:id="@+id/txt_desc_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_rating_play"
        android:layout_alignBottom="@id/img_desc_progress"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/desc_margin_lr"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/desr_ic_cloud_upload_black_24dp"
        android:layout_alignBottom="@id/img_desc_progress"
        android:layout_toLeftOf="@id/txt_desc_rating"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/img_desc_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/desr_ic_cloud_upload_black_24dp"
        android:layout_below="@id/img_desc_progress"
        android:layout_marginLeft="@dimen/desc_margin_lr"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_desc_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_cloud"
        android:layout_alignBottom="@id/img_desc_save"
        android:layout_toRightOf="@id/img_desc_save"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/txt_desc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_desc_top"
        android:textSize="20sp"
        android:layout_below="@+id/img_desc_save"
        android:layout_marginLeft="@dimen/desc_margin_lr"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/txt_desc_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_desc_part1"
        android:layout_below="@id/txt_desc_desc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/desc_margin_lr"
        android:layout_marginRight="@dimen/desc_margin_lr"/>

    <TextView
        android:id="@+id/txt_desc_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_desc_part2"
        android:layout_below="@+id/txt_desc_from"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/desc_margin_lr"
        android:layout_marginLeft="@dimen/desc_margin_lr"/>

    <TextView
        android:id="@+id/txt_desc_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_mes_top"
        android:layout_below="@id/txt_desc_sub"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/desc_margin_lr"
        android:layout_marginRight="@dimen/desc_margin_lr"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_mes_part1"
        android:layout_below="@id/txt_desc_mes"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/desc_margin_lr"
        android:layout_marginLeft="@dimen/desc_margin_lr"/>

</RelativeLayout>