<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer_ic_alarm_white_24dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer_ic_query_builder_white_24dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer_ic_hourglass_empty_white_24dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer_ic_timer_white_24dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer_ic_more_vert_white_24dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_time"
            style="@style/timer_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_time_h"
            style="@style/timer_time_desc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_time"
            style="@style/timer_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_time_m"
            style="@style/timer_time_desc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_time"
            style="@style/timer_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_time_s"
            style="@style/timer_time_desc"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer_ic_backspace_white_24dp"
            android:layout_gravity="center"
            android:layout_weight="3"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/descDivider"
        android:layout_marginTop="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="1"
                style="@style/timer_numbers"/>
            <TextView
                android:text="2"
                style="@style/timer_numbers"/>
            <TextView
                android:text="3"
                style="@style/timer_numbers"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="4"
                style="@style/timer_numbers"/>
            <TextView
                android:text="5"
                style="@style/timer_numbers"/>
            <TextView
                android:text="6"
                style="@style/timer_numbers"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="7"
                style="@style/timer_numbers"/>
            <TextView
                android:text="8"
                style="@style/timer_numbers"/>
            <TextView
                android:text="9"
                style="@style/timer_numbers"/>
        </TableRow>
        <TableRow>
            <TextView/>
            <TextView
                android:text="0"
                style="@style/timer_numbers"/>
            <TextView/>
        </TableRow>
    </TableLayout>

</LinearLayout>