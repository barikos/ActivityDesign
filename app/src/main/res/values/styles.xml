<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalcStyle">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/calcText</item>
        <item name="android:textSize">@dimen/calculate_activity_txt</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CalcStyleAction">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/calcText</item>
        <item name="android:textSize">@dimen/calculate_activity_txt_action</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CalcRow">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/calc_row_padding_right_left</item>
        <item name="android:paddingRight">@dimen/calc_row_padding_right_left</item>
    </style>


    <style name="alto_button_setup">
        <item name="android:textColor">@color/alto_text_btn</item>
        <item name="android:background">@color/alto_btn_setup</item>
    </style>

    <style name="alto_read_next">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Styles for registration-->
    <style name="reg_img">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="reg_edt">
        <item name="android:layout_weight">7</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--Styles for timer-->
    <style name="timer_time">
        <item name="android:textColor">@color/timer_txt</item>
        <item name="android:textSize">@dimen/timer_txt_time</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="timer_time_desc">
        <item name="android:textColor">@color/timer_txt</item>
        <item name="android:textSize">@dimen/timer_txt_time_desc</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="timer_numbers">
        <item name="android:textColor">@color/timer_txt</item>
        <item name="android:textSize">@dimen/timer_txt_number</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/timer_number_marg_top</item>
    </style>

    <!--Styles for games-->
    <style name="games_txt_more_games">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/games_txt_more_games_size</item>
        <item name="android:layout_weight">25</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="games_app_name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/games_app_name_txt_size</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="games_app_com">
        <item name="android:textSize">@dimen/games_app_name_com_size</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="games_app_price">
        <item name="android:textColor">@color/games_txt_app_price</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/games_app_price_txt_size</item>
    </style>
    <style name="games_app_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/games_border</item>
        <item name="android:padding">@dimen/games_app_layout_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/games_app_layout_marg_left_right</item>
        <item name="android:layout_marginRight">@dimen/games_app_layout_marg_left_right</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--Styles for games-->
    <style name="music_dashboard">
        <item name="android:layout_weight">1</item>
        <!--<item name="android:gravity">center_vertical|center_horizontal</item>-->
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--Styles for music-->
    <style name="music_begin_end">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/music_txt_begin_end</item>
        <item name="android:paddingTop">5dp</item>
    </style>

</resources>
