<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/games_border"/>
            <solid android:color="@color/games_background"/>
            <corners android:radius="3dp"/>
            <padding android:right="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:top="5dp"/>
        </shape>
    </item>
</layer-list>